{
  "name": "extend-me",
  "version": "0.0.0",
  "displayName": "ExtendMe!",
  "description": "An extension framework that may be used with React hooks",
  "readme": "README.md",
  "author": "https://github.com/forman",
  "repository": "https://github.com/bcdev/react-extension-framework",
  "bugs": "https://github.com/bcdev/react-extension-framework/issues",
  "license": "MIT",
  "type": "module",
  "module": "dist/extend-me.js",
  "main": "dist/extend-me.umd.cjs",
  "types": "dist/framework/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": "./dist/extend-me.js",
      "require": "./dist/extend-me.umd.cjs"
    }
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "test": "vitest",
    "mk-coverage": "vitest --coverage",
    "mk-apidocs": "typedoc src/framework/index.ts --out docs/api"
  },
  "dependencies": {
    "ajv": "^8.12.0",
    "zustand": "^4.4.0"
  },
  "peerDependencies": {
    "react": "18",
    "react-dom": "18"
  },
  "devDependencies": {
    "@types/node": "^20.5.6",
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-react-swc": "^3.3.2",
    "@vitest/coverage-v8": "^0.34.2",
    "eslint": "^8.45.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "typedoc": "^0.25.0",
    "typescript": "^5.0.2",
    "vite": "^4.4.5",
    "vite-plugin-dts": "^3.5.2",
    "vitest": "^0.34.2"
  }
}
